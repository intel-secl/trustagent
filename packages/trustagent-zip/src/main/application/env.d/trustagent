JAVA_OPTS="-Dfs.name=trustagent -Dfs.home=$TRUSTAGENT_HOME -Dfs.conf=$TRUSTAGENT_CONF -Dlogback.configurationFile=$TRUSTAGENT_CONF/logback.xml -Djdk.tls.ephemeralDHKeySize=2048"

