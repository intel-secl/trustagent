<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>com.intel.mtwilson.trustagent.packages</groupId>
    <artifactId>trustagent-windows</artifactId>
    <version>5.2-SNAPSHOT</version>
    
    <packaging>pom</packaging>
    <description>Windows installer that installs Trust Agent and its bundled requirements on Windows</description>
    
    <properties>
        <makeself.directory>${project.build.directory}/${project.artifactId}-${project.version}</makeself.directory>
    </properties>
    
    <modules>
        <module>src/systemtray</module>
        <module>src/service</module>
    </modules>
	
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.intel.mtwilson.maven</groupId>
                <artifactId>mtwilson-maven-bom-coreutil</artifactId>
                <version>${project.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.intel.mtwilson.maven</groupId>
                <artifactId>mtwilson-maven-bom-external</artifactId>
                <version>${project.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
   
    <!-- 
    <build>
        <resources>
            <resource>
                <directory>src/files</directory>
            </resource>
        </resources>
    </build>
    -->
    
    <profiles>
        <profile>
            <activation>              
                <os>
                    <family>windows</family>
                </os>         
            </activation>
            
            <dependencies>
                <dependency>
                    <groupId>org.slf4j</groupId>
                    <artifactId>slf4j-api</artifactId>
                   
                </dependency>
                <dependency>
                    <groupId>ch.qos.logback</groupId>
                    <artifactId>logback-classic</artifactId>
                   
                </dependency>
                <dependency>
                    <groupId>com.intel.mtwilson.trustagent.packages</groupId>
                    <artifactId>trustagent-zip</artifactId>
                    <classifier>application</classifier>
                    <version>${project.version}</version>
                    <type>zip</type>
                </dependency>
                <dependency>
                    <groupId>com.intel.mtwilson.windows.packages</groupId>
                    <artifactId>tpmtools-windows</artifactId>
                    <version>4.0</version>
                    <type>zip</type>
                </dependency>
                <!--<dependency>
                    <groupId>com.oracle</groupId>
                    <artifactId>jre</artifactId>
                    <version>1.8</version>
                    <classifier>windows-x64</classifier>
                    <type>tar.gz</type>
                </dependency> -->	
                <dependency>
                    <groupId>com.intel.mtwilson.linux</groupId>
                    <artifactId>mtwilson-linux-util</artifactId>
                    <version>${project.version}</version>
                    <type>sh</type>
                </dependency>	
            </dependencies>
            
            <build>
                <plugins>
                    <!-- copy artifacts  plugin -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.4</version>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.intel.mtwilson.trustagent.packages</groupId>
                                            <artifactId>trustagent-zip</artifactId>
                                            <classifier>application</classifier>
                                            <version>${project.version}</version>
                                            <type>zip</type>
                                            <outputDirectory>${makeself.directory}</outputDirectory>
                                            <destFileName>trustagent-${project.version}.zip</destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>com.intel.mtwilson.windows.packages</groupId>
                                            <artifactId>tpmtools-windows</artifactId>
                                            <version>4.0</version>
                                            <type>zip</type>
                                            <outputDirectory>${makeself.directory}</outputDirectory>
                                        </artifactItem>  
                                        <artifactItem>
                                            <groupId>com.oracle</groupId>
                                            <artifactId>jre</artifactId>
                                            <version>1.8</version>
                                            <classifier>windows-x64</classifier>
                                            <type>tar.gz</type>
                                            <outputDirectory>${makeself.directory}/jre</outputDirectory>
                                        </artifactItem>                                      
                                    </artifactItems>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    
                    <!-- copy other resources plugin -->
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>2.5</version>
                        <executions>
                            <execution>
                                <id>copy-resources</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${makeself.directory}</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>src/etc</directory>
                                            <includes>
                                                <include>version</include>
                                            </includes>
                                            <filtering>true</filtering>
                                        </resource>
                                        <resource>
                                            <directory>src/files</directory>
                                            <includes>
                                                <include>**/*</include>
                                            </includes>
                                            <filtering>false</filtering>
                                        </resource>
                                    </resources>
                                </configuration>            
                            </execution>
                            <execution>
                                <id>copy-resources_tpmtool</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${makeself.directory}/3rdparty</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>src/3rdparty</directory>
                                            <includes>
                                                <include>**/*</include>
                                            </includes>
                                            <filtering>false</filtering>
                                        </resource>
                                    </resources>
                                </configuration>            
                            </execution>
                            <execution>
                                <id>copy-resources_jre_script</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${makeself.directory}/jre</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>src/jre</directory>
                                            <includes>
                                                <include>**/*</include>
                                            </includes>
                                            <filtering>false</filtering>
                                        </resource>
                                    </resources>
                                </configuration>            
                            </execution>
                            <execution>
                                <id>copy-resources_nsisinstaller</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${makeself.directory}/nsis</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>src/nsis</directory>
                                            <includes>
                                                <include>**/*</include>
                                            </includes>
                                            <filtering>false</filtering>
                                        </resource>
                                    </resources>
                                </configuration>            
                            </execution>
                        </executions>
                    </plugin>
					
                    <!-- create self-extracting installer plugin -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.6.0</version>
                        <executions>
                            <execution>
                                <id>create-single-installer</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>bash</executable>
                                    <arguments>
                                        <argument>makezip-auto.sh</argument>
                                        <argument>${makeself.directory}</argument>
                                        <argument>${project.version}</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    
                    <!-- deploy installers to repository -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                    </plugin>
                </plugins>
                
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.codehaus.mojo</groupId>
                            <artifactId>build-helper-maven-plugin</artifactId>
                            <version>1.5</version>
                            <executions>
                                <execution>
                                    <id>attach-artifacts</id>
                                    <phase>package</phase>
                                    <goals>
                                        <goal>attach-artifact</goal>
                                    </goals>
                                    <configuration>
                                        <artifacts>
                                            <artifact>
                                                <file>${project.build.directory}/${project.artifactId}-${project.version}.exe</file>
                                                <type>exe</type>
                                            </artifact>
                                        </artifacts>
                                    </configuration>
                                </execution>
                            </executions>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
        
        <profile>
            <id>signing</id>         
            <activation>
                <property>
                    <name>signing</name>
                </property>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <id>code-signing</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>  
                                        <copy file="${project.build.directory}/${project.artifactId}-${project.version}.exe"  tofile="${project.build.directory}/${project.artifactId}-${project.version}-signed.exe" />                                                
                                        <exec executable="SignFile.exe">
                                            <arg value="${project.build.directory}/${project.artifactId}-${project.version}-signed.exe"/>
                                        </exec>
                                    </target>
        
                                </configuration>
                            </execution>
                            <execution>
                                <id>attach-artifact</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <attachartifact file="${project.build.directory}/${project.artifactId}-${project.version}-signed.exe" classifier="signed" type="exe"/>
                                        <attachartifact file="${project.build.directory}/${project.artifactId}-${project.version}.exe" type="exe"/>                     
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        
