<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>com.intel.mtwilson.trustagent.packages</groupId>
    <artifactId>trustagent-linux</artifactId>
    <version>5.2-SNAPSHOT</version>
    
    <packaging>pom</packaging>
    <description>Self-extracting executable that installs Trust Agent and its bundled requirements</description>
    
    <properties>
        <makeself.directory>${project.build.directory}/${project.artifactId}-${project.version}</makeself.directory>
    </properties>
    
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.intel.mtwilson.maven</groupId>
                <artifactId>mtwilson-maven-bom-coreutil</artifactId>
                <version>${project.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.intel.mtwilson.maven</groupId>
                <artifactId>mtwilson-maven-bom-external</artifactId>
                <version>${project.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    
    <build>
        <resources>
            <resource>
                <directory>src/files</directory>
            </resource>
        </resources>
    </build>
    
    <profiles>
        <profile>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            
            <dependencies>
                <dependency>
                    <groupId>com.intel.mtwilson.trustagent.packages</groupId>
                    <artifactId>trustagent-zip</artifactId>
                    <classifier>application</classifier>
                    <version>${project.version}</version>
                    <type>zip</type>
                </dependency>
                <dependency>
                    <groupId>com.intel.mtwilson.linux</groupId>
                    <artifactId>mtwilson-linux-util</artifactId>
                    <version>${project.version}</version>
                    <type>sh</type>
                </dependency>
                <dependency>
                    <groupId>com.intel.mtwilson.trustagent.packages</groupId>
                    <artifactId>tboot-linux</artifactId>
                    <version>${project.version}</version>
                    <type>bin</type>
                </dependency>
                <dependency>
                    <groupId>com.intel.isecl</groupId>
                    <artifactId>workload-agent</artifactId>
                    <version>2.1-SNAPSHOT</version>
                    <type>bin</type>
                </dependency>
                <dependency>
                    <groupId>org.slf4j</groupId>
                    <artifactId>slf4j-api</artifactId>
                </dependency>
                <dependency>
                    <groupId>ch.qos.logback</groupId>
                    <artifactId>logback-classic</artifactId>
                </dependency>
            </dependencies>
            
            <build>
                <plugins>
                    <!-- copy artifacts plugin -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.4</version>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.intel.mtwilson.trustagent.packages</groupId>
                                            <artifactId>trustagent-zip</artifactId>
                                            <classifier>application</classifier>
                                            <version>${project.version}</version>
                                            <type>zip</type>
                                            <outputDirectory>${makeself.directory}</outputDirectory>
                                            <destFileName>trustagent-${project.version}.zip</destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>com.intel.mtwilson.linux</groupId>
                                            <artifactId>mtwilson-linux-util</artifactId>
                                            <version>${project.version}</version>
                                            <type>sh</type>
                                            <outputDirectory>${makeself.directory}</outputDirectory>
                                            <destFileName>functions</destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>com.intel.mtwilson.trustagent.packages</groupId>
                                            <artifactId>tboot-linux</artifactId>
                                            <version>${project.version}</version>
                                            <type>bin</type>
                                            <outputDirectory>${makeself.directory}</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>com.intel.isecl</groupId>
                                            <artifactId>workload-agent</artifactId>
                                            <version>2.1-SNAPSHOT</version>
                                            <type>bin</type>
                                            <outputDirectory>${makeself.directory}</outputDirectory>
                                        </artifactItem>
                                    </artifactItems>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    
                    <!-- copy other resources plugin -->
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>2.5</version>
                        <executions>
                            <execution>
                                <id>copy-build-resources</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>src/build</directory>
                                            <includes>
                                                <include>**/*</include>
                                            </includes>
                                            <filtering>false</filtering>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-resources</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${makeself.directory}</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>src/etc</directory>
                                            <includes>
                                                <include>version</include>
                                            </includes>
                                            <filtering>true</filtering>
                                        </resource>
                                        <resource>
                                            <directory>src/files</directory>
                                            <includes>
                                                <include>**/*</include>
                                            </includes>
                                            <filtering>false</filtering>
                                        </resource>
                                    </resources>
                                </configuration>            
                            </execution>
                        </executions>
                    </plugin>
                    
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <id>get-tboot-tbootxm-dependencies</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <chmod perm="+x" file="${project.build.directory}/get-dependencies.sh"/>
                                        <exec executable="/bin/bash" dir="${makeself.directory}" failonerror="true">
                                            <redirector output="${project.build.directory}/get-dependencies.log" alwayslog="true"/>
                                            <arg value="-c"/>
                                            <arg value="../get-dependencies.sh"/>
                                        </exec>
                                    </target>
                                </configuration>
                            </execution>
                            <execution>
                                <id>attach-artifact-main-binary</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <attachartifact file="${project.build.directory}/${project.artifactId}-${project.version}.bin" type="bin"/>
                                        <!--<loadfile property="distro" srcFile="${project.build.directory}/distro"/>-->
                                        <!--<echo>DISTRO=${distro}</echo>-->
                                        <!--<move file="${project.build.directory}/${project.artifactId}-${project.version}.bin" tofile="${project.build.directory}/${project.artifactId}-${project.version}-${distro}.bin"/>-->
                                        <!--<attachartifact file="${project.build.directory}/${project.artifactId}-${project.version}-${distro}.bin" classifier="${distro}" type="bin"/>-->
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>org.apache.ant</groupId>
                                <artifactId>ant</artifactId>
                                <version>1.8.4</version>
                            </dependency>
                            <dependency>
                                <groupId>ant-contrib</groupId>
                                <artifactId>ant-contrib</artifactId>
                                <version>1.0b3</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                    
                    <!-- begin create self-extracting installer plugin -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2.1</version>
                        <executions>
                            <execution>
                                <id>create-single-installer</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>bash</executable>
                                    <arguments>
                                        <argument>makebin-auto.sh</argument>
                                        <argument>${makeself.directory}</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        
        <profile>
            <id>gitvars</id>
            <activation>
                <property>
                    <name>!nogit</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>pl.project13.maven</groupId>
                        <artifactId>git-commit-id-plugin</artifactId>
                        <version>2.1.15</version>
                        <executions>
                            <execution>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>revision</goal>
                                </goals>
                                <inherited>true</inherited>
                                <configuration>
                                    <skipPoms>false</skipPoms>
                                    <prefix>git</prefix>
                                    <dateFormat>EEE, d MMM yyyy HH:mm:ss z</dateFormat>
                                    <failOnNoGitDirectory>false</failOnNoGitDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        
        <profile>
            <id>rpm</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>rpm-maven-plugin</artifactId>
                        <version>2.0.1</version>
                        <executions>
                            <execution>
                                <inherited>false</inherited>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>rpm</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <group>System Environment/Base</group>
                            <filemode>777</filemode>
                            <copyright>intel</copyright>
                            <name>${project.artifactId}</name>
                            <version>${project.version}</version>
                            <classifier>noarch</classifier>
                            <packaging>rpm</packaging>
                            <description>${description}</description>
                            <requires>
                                <require>redhat-lsb-core</require>
                                <require>libvirt</require>
                                <require>redhat-lsb</require>
                                <require>grub2-efi-modules</require>
                                <require>openssl-devel</require>
                                <require>zip</require>
                                <require>unzip</require>
                                <require>vim-common</require>
                                <require>grub2-efi-modules</require>
                                <require>java</require>
                                <require>vim-common</require>
                                <require>make</require>
                                <require>gcc</require>
                            </requires>
                            <mappings>
                                <mapping>
                                    <directory>/etc/sh/</directory>
                                    <directoryIncluded>false</directoryIncluded>
                                    <sources>
                                        <!-- <source>
                                                                             <location>${project.build.directory}/${project.artifactId}-${project.version}</location>
                                        </source>-->
                                        <source>
                                            <location>${project.build.directory}/${project.artifactId}-${project.version}.bin</location>
                                        </source>
                                
                                                        
                                    </sources>
                                </mapping>
                            </mappings>
                                        
                            <postinstallScriptlet>
                                <script> export IS_RPM=true; cd  ;cp /etc/sh/${project.artifactId}-${project.version}.bin .;chmod  +x ${project.artifactId}-${project.version}.bin;sleep 1;./${project.artifactId}-${project.version}.bin </script>
						
                                <fileEncoding>utf-8</fileEncoding>
                            </postinstallScriptlet>         
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>yum</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <inherited>false</inherited>
                                <id>copy-rpm-to-yum-repo</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <!-- <attachartifact file="${project.build.directory}/rpm/${artifactId}/RPMS/noarch/${artifactId}-1.0-1.noarch.rpm" type="rpm" />-->
                                        <scp trust="yes" todir="${user}@${url}:/var/ftp/pub/" password="${password}" verbose="true">
                                            <fileset dir="${project.build.directory}/rpm/${artifactId}/RPMS/noarch/">
                                                <include name="**/*.rpm" />
                                            </fileset>
                                        </scp>
                                        <sshexec trust="true" failonerror="true" host="${url}" username="${user}" password="${password}" command="cd /var/ftp; createrepo pub " timeout="12000" />
                                        <taskdef name="scp" classname="org.apache.tools.ant.taskdefs.optional.ssh.Scp">
                                            <classpath refid="maven.plugin.classpath" />
                                        </taskdef>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>org.apache.ant</groupId>
                                <artifactId>ant</artifactId>
                                <version>1.8.4</version>
                            </dependency>
                            <dependency>
                                <groupId>com.jcraft</groupId>
                                <artifactId>jsch</artifactId>
                                <version>0.1.53</version>
                            </dependency>
                            <dependency>
                                <groupId>ant</groupId>
                                <artifactId>ant-jsch</artifactId>
                                <version>1.6.5</version>
                            </dependency>
                            <dependency>
                                <groupId>ant-contrib</groupId>
                                <artifactId>ant-contrib</artifactId>
                                <version>1.0b3</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
        
        <!-- activate this profile with  -Dsigning on the command line -->
        <profile>
            <id>signing</id>         
            <activation>
                <property>
                    <name>signing</name>
                </property>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <id>code-signing</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <chmod perm="a+rwx" file="${project.build.directory}/${project.artifactId}-${project.version}.bin"/>
                                        <exec executable="/bin/bash" failonerror="true">
                                            <redirector output="${project.build.directory}/intel-signfile.log" alwayslog="true"/>
                                            <arg value="intel-signfile.sh"/>
                                            <arg value="${project.build.directory}/${project.artifactId}-${project.version}.bin"/>
                                        </exec>
                                    </target>
                                </configuration>
                            </execution>
                            <execution>
                                <id>attach-artifacts-code-signing</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <attachartifact file="${project.build.directory}/${project.artifactId}-${project.version}.bin.README.sig" type="bin.README.sig"/>
                                        <attachartifact file="${project.build.directory}/${project.artifactId}-${project.version}.bin.README"  type="bin.README"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    
    </profiles>
    
</project>
